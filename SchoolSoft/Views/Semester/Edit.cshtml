@model SemesterViewModel

@{
    ViewData["Title"] = "Edit Semester";
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">
        <a asp-action="Index" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> Go Back</a>
    </h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Edit Semester Details</h6>
        </div>
        <div class="card-body">
            <form method="post" action="Edit">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label for="" class="form-label">Faculty Name</label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="submit" class="form-control btn btn-primary" value="Save" />
                </div>
            </form>
        </div>
    </div>
</div>

<!-- /.container-fluid -->
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
