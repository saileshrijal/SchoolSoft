@model List<ParentViewModel>

@{
    ViewData["Title"] = "Parent";
}
<div class="container">
    <div class="row mb-4">
        <div class="col-6">
            <h2>List of Parents</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle-fill"></i> Add Parent</a>
        </div>
    </div>
    <div>
        <table class="table table-hover table-striped table-bordered" id="myDataTable">
            <thead>
                <tr>
                    <th>
                        Parent Name
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        Contact Number
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Created At
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Gender
                        </td>
                        <td>
                            @item.ConctactNumber
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.CreatedAt
                        </td>
                        <td>
                            <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit <i class="bi bi-pencil"></i></a>
                            @*Creating form to execute HTTPPOST Request*@
                            <form asp-action="Delete" asp-route-id="@item.Id" class="d-inline">
                                <button type="button" class="deleteBtn btn btn-danger">Delete <i class="bi bi-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
